# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@localhost:5432/dev_jobs_db

# JWT Authentication
JWT_SECRET_KEY=<generate_with: python -c "import secrets; print(secrets.token_hex(32))">
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# Security
INTERNAL_SECRET=<generate_with: python -c "import secrets; print(secrets.token_urlsafe(32))">
ALLOWED_ORIGINS=*

# Email Settings
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@devjobs.kz

# Frontend URL (for email templates)
FRONTEND_URL=http://localhost:5173

# Scraper Settings
HH_AREA=40

# AI/LLM Settings
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE
AI_MODEL=gpt-4o
